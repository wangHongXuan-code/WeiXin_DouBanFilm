.film-img{
  width: 100%;
  height: 280rpx;
}

.film-name{
  font-size: 22rpx;
  font-weight: bold;
  color: #333;
  /* 对较长的电影名称进行处理 */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.film-star{
  width: 100%;
}

.film-star .star-img{
  height: 20rpx;
  width: 20rpx;
}

.film-star .film-source{
  font-size: 20rpx;
  color: #999;
  padding-left: 8rpx;
}