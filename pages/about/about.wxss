.about{
  width: 100%;
}

/* 用户信息 */
.userinfo{
  text-align: center;
  height: 400rpx;
  background-image: linear-gradient(to bottom,#42bd56,#9acfa3);
}
.userinfo .user-img{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: 30rpx 0;
}
.userinfo .user-nickname{
  color:white;
  font-weight: bold;
}
.userinfo .login{
  background: white;
  color: #333;
  border: 0;
  border-radius: 50rpx;
}

/* 我的收藏 */
.favorite{
  background-color: white;
}
.favorite .favorite-title{
  font-size: 30rpx;
  color: #333;
  padding: 26rpx;
  font-weight: bold;
}
.favorite-list{
  width: 100%;
  padding: 0 12rpx;
  box-sizing: border-box;
}
.favorite-item{
  display: inline-block;
  width: 33.3%;
  padding: 0 12rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.favorite-item .delete{
  display: block;
  font-size: 20rpx;
}
.favorite-no{
  text-align: center;
  color: #999;
  font-size: 20rpx;
  padding-bottom: 30rpx;
}